<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="imc.MainPage">

    <StackLayout>
        <Label Text="IMC" FontSize="35" HorizontalTextAlignment="Center" Margin="0,300,0,0"/>

        <Label Text="Altura:" Margin="30,0,0,0" FontSize="20" HorizontalTextAlignment="Center" />
        <Entry x:Name="texto_altura" FontSize="15" Keyboard="Numeric" Margin="450,0,450,10" HorizontalTextAlignment="Center" />

        
        <Label Text="Peso:" Margin="30,20,30,0" FontSize="20" HorizontalTextAlignment="Center" />
        <Entry x:Name="texto_peso" FontSize="15" Keyboard="Numeric" Margin="450,0,450,10" HorizontalTextAlignment="Center"   />

        <Button Text="VER" Clicked="Button_Clicked" Margin="550,20,550,0" FontSize="20"  CornerRadius="20"/>

        
        
        
    </StackLayout>

</ContentPage>
